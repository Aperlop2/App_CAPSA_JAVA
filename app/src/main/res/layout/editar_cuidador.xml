<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_cuidador"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imagenCuidador"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/avatar"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etNombreEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/roboto_medium"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp"
            tools:ignore="Autofill,TextContrastCheck,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/etDireccionEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/roboto_medium"
            android:drawableLeft="@drawable/baseline_location_pin_24"
            android:hint="@string/direccion"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            android:padding="8dp"
            tools:ignore="Autofill,VisualLintTextFieldSize,TextContrastCheck" />

        <EditText
            android:id="@+id/etTelefonoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/roboto_medium"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:hint="@string/telefono"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="8dp"
            tools:ignore="Autofill,TextContrastCheck,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/etHorarioEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/horario"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="8dp"
            tools:ignore="Autofill,VisualLintTextFieldSize,TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnGuardarEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/baseline_save_24"
                android:text="@string/guardar"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle,RtlHardcoded,TextContrastCheck" />

            <Button
                android:id="@+id/btnCancelarEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:drawableLeft="@drawable/baseline_cancel_24"
                android:text="@string/cancelar"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle,RtlHardcoded,TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>