<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0F7FA"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_notificaciones"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_notificaciones"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_titulo_notificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/notificaciones_recientes_titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_total_notificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_de_notificaciones_recientes_0"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <ScrollView
        android:id="@+id/scroll_notificaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/cerrar"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4A90E2"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        tools:ignore="ObsoleteLayoutParam,VisualLintButtonSize" />
</LinearLayout>
