<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7D6DB"
    tools:context=".gestionadministradores">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Botón de regresar -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/ic_regresar"
            android:contentDescription="@string/regresar"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

        <!-- Foto de perfil del administrador -->
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_image_background"
            android:contentDescription="@string/foto_de_perfil"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_del_administrador"
        android:textSize="29sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        tools:ignore="VisualLintOverlap" />

    <!-- Menú Inferior -->
    <GridLayout
        android:id="@+id/panel_admin"
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="14dp"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/administradores"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

    </GridLayout>

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_below="@id/panel_admin"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_map"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/mapa"
                android:src="@drawable/ic_mapa"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mapa"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_caregivers"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:contentDescription="@string/cuidadores"
                android:src="@drawable/ic_cuidadores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cuidadores"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_appointments"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/citas"
                android:src="@drawable/ic_citas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Citas"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_citas_pendientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/citas_pendientes"
                android:src="@drawable/ic_citas_pendientes"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Citas\npendientes"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
