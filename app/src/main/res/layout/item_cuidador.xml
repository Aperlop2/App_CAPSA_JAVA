<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".CuidadorAdapter">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del cuidador -->
        <ImageView
            android:id="@+id/imagen_cuidador"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/cuidador_imagen"
            android:src="@drawable/ic_cuidadores"/>

        <!-- Nombre del cuidador -->
        <TextView
            android:id="@+id/nombre_cuidador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_del_cuidador"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="8dp"/>

        <!-- Ubicación del cuidador -->
        <TextView
            android:id="@+id/ubicacion_cuidador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="4dp"
            tools:ignore="HardcodedText" />

        <!-- Descripción del cuidador -->
        <TextView
            android:id="@+id/descripcion_cuidador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripcion_breve"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="4dp"/>

        <!-- Fecha y hora -->
        <TextView
            android:id="@+id/fecha_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_y_hora"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="4dp"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Botón Editar -->
            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginEnd="8dp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <!-- Botón Eliminar -->
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
