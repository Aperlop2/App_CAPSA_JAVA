<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:padding="16dp"
    tools:context=".MapaTiempoReal">

    <ImageButton
        android:id="@+id/btn_back_mapa"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/regresar"
        android:contentDescription="@string/regresar"
        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_titulo_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:text="@string/mapa_tiempo_real"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <FrameLayout
        android:id="@+id/contenedor_mapa"
        android:layout_width="379dp"
        android:layout_height="559dp"
        android:layout_above="@id/btn_centrar_mapa"
        android:layout_below="@id/tv_titulo_mapa"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="-4dp" />

    <Button
        android:id="@+id/btn_centrar_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4A90E2"
        android:text="@string/centrar_mapa"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        tools:ignore="VisualLintButtonSize" />

</RelativeLayout>
